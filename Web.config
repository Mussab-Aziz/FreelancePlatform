<?xml version="1.0"?>
<configuration>
  <connectionStrings>
    <add name="DBConnection"
         connectionString="Data Source=localhost;Initial Catalog=FreelancePlatformDB;Integrated Security=True"
         providerName="System.Data.SqlClient" />
  </connectionStrings>
  <system.webServer>
    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="Default.aspx" />
      </files>
    </defaultDocument>
  </system.webServer>

  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <authentication mode="Forms" />
    <authorization>
      <allow users="*" />
    </authorization>
    <customErrors mode="Off" />
  </system.web>

  <system.webServer>
    <defaultDocument>
      <files>
        <add value="Default.aspx" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>
